{
  "name": "root",
  "version": "0.4.0",
  "private": true,
  "license": "BSD-3-Clause-Clear",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  },
  "scripts": {
    "build": "pnpm sdk:build && pnpm react-sdk:build && pnpm vue-sdk:build && pnpm nextjs:build",
    "sdk:build": "pnpm --filter ./packages/fhevm-sdk build",
    "react-sdk:build": "pnpm --filter ./packages/fhevm-react-sdk build",
    "vue-sdk:build": "pnpm --filter ./packages/fhevm-vue-sdk build",
    "nextjs:build": "pnpm --filter ./examples/nextjs build",

    "chain": "cd packages/hardhat && npx hardhat node",
    "nextjs-example": "pnpm --filter ./examples/nextjs dev",
    "vue-example": "pnpm --filter ./examples/vue build && pnpm --filter ./examples/vue preview",
    "nodejs-example": "pnpm --filter ./examples/nodejs start"
  }
}
